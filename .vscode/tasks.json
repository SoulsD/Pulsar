{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "make",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "make pulsar",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build tests",
            "type": "shell",
            "command": "make test",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "build shaders",
            "type": "shell",
            "command": "make shaders",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "make release",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "build clean",
            "type": "shell",
            "command": "make clean",
            "group": "build",
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "test/run_unittest",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "owner": "gtest",
                "severity": "error",
                // gtest multiline error handling
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):\\s+.*$",
                        "file": 1,
                        "line": 2
                    },
                    {
                        "regexp": "^((:?Value of:.*)|(:?  Actual: .*)|(:?Expected: .*)|(:?      Expected: .*)|(:?To be equal to: .*)|(:?      Which is: .*))$",
                        "message": 1,
                        "loop": true
                    }
                ]
            }
        }
    ]
}