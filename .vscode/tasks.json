{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "make",
            "windows": {
                "command": "mingw32-make"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build test",
            "type": "shell",
            "command": "make test",
            "windows": {
                "command": "mingw32-make test"
            },
            "group": "build",
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "windows": {
                "command": "mingw32-make clean"
            },
            "group": "build"
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "./build/run_unittest",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}