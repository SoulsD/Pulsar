{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
    },
    "tasks": [
        {
            "label": "(build) All",
            "type": "shell",
            "command": "make",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "(build) Debug",
            "type": "shell",
            "command": "make pulsar",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "(build) Tests",
            "type": "shell",
            "command": "make test",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "(build) Shaders",
            "type": "shell",
            "command": "make shaders",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "(build) Release",
            "type": "shell",
            "command": "make release",
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "(build) Clean",
            "type": "shell",
            "command": "make clean",
            "group": "build",
        },
        {
            "label": "(run) Tests",
            "type": "shell",
            "command": "test/run_unittest",
            "args": [
                "--gtest_color=no"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "owner": "gtest",
                "severity": "error",
                // gtest multiline error handling
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):\\s+.*$",
                        "file": 1,
                        "line": 2
                    },
                    {
                        "regexp": "^((:?Value of:.*)|(:?  Actual: .*)|(:?Expected: .*)|(:?      Expected: .*)|(:?To be equal to: .*)|(:?      Which is: .*))$",
                        "message": 1,
                        "loop": true
                    }
                ]
            }
        }
    ]
}